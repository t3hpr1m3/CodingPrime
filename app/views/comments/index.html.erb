<h1>Listing comments</h1>

<table>
  <tr>
    <th>User name</th>
    <th>User site</th>
    <th>User email</th>
    <th>Comment text</th>
    <th>User ip</th>
    <th>User agent</th>
    <th>Referrer</th>
    <th>Post</th>
    <th>Approved</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%=h comment.user_name %></td>
    <td><%=h comment.user_site %></td>
    <td><%=h comment.user_email %></td>
    <td><%=h comment.comment_text %></td>
    <td><%=h comment.user_ip %></td>
    <td><%=h comment.user_agent %></td>
    <td><%=h comment.referrer %></td>
    <td><%=h comment.post %></td>
    <td><%=h comment.approved %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_comment_path %>