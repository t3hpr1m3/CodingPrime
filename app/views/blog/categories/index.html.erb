<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Slug</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to h( category.name ), [:blog, category] %></td>
    <td><%=h category.slug %></td>
    <td><%= link_to 'Show', [:blog, category] %></td>
    <td><%= link_to 'Edit', edit_blog_category_path(category) %></td>
    <td><%= link_to 'Destroy', [:blog, category], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New category', new_blog_category_path %>
